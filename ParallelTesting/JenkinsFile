pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sleep 2 ;
            }
        }
        stage('Test UI') {
            steps {
                echo 'Testing..'
                sleep 3 ; 
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sleep 1; 
            }
        }
        stage('Run Parrallel Tests') {
            parallel {
                stage('Test On Oracle 10') {
                    agent {
                        label "Postgres" 
                    }
                    steps {
                        echo "ORacle 10"
                        sleep 5 ;
                        echo "FILE PATH /tmp/${JOBNAME}/${BUILD_NUMBER}/tests/Oracle.json " 
                        sh 'echo "Test RESULT OK ORACLE" > /tmp/${JOBNAME}/${BUILD_NUMBER}/tests/Oracle.json'
                    }
                }
                stage('Test On Postgres') {
                    agent {
                        label "Postgres"
                    }
                    steps {
                        echo "Run Postgres"
                        sleep 5 ;
                    }
                }
            }
        }
        stage('Agregate reports ') {
            steps {
                echo 'Deploying reports....'
                sleep 1; 
            }
        }
    }
}

